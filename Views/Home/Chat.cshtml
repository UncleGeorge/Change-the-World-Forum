@{
    ViewData["Title"] = "Chat";
}

<h2>Chat</h2>

<input type="hidden" id="username" value="@ViewData["Author"]" />

<div>
    <ul id="chat-list"></ul>
</div>

<div>
    <input type="text" id="message-input" />
    <button id="send-button">Send</button>
</div>

@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
}