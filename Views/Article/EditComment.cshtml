@model Comment

@{
    ViewData["Title"] = "Edit Comment";
}

<h1>Edit Comment</h1>

@using (Html.BeginForm("EditComment", "Article", FormMethod.Post))
{

    @Html.Hidden("CommentId", Model.CommentId)


    <div class="form-group">
        <label asp-for="Text" class="control-label">Comment</label>
        <textarea asp-for="Text" class="form-control" name="Text" rows="5" required></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}